<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context
       https://www.springframework.org/schema/context/spring-context.xsd
       http://www.springframework.org/schema/mvc
       https://www.springframework.org/schema/mvc/spring-mvc.xsd">

    <!--自动扫描包：让指定包下的注解生效，使用注解注册给SpringIOC容器进行管理-->
    <context:component-scan base-package="ssm.springmvc.controller"/>
    <!--让SpringMVC不再处理静态资源 类似.css   .js  .html-->
    <mvc:default-servlet-handler/>
    <!--在Spring中，一般采用@RequestMapping注解来完成映射关系
    而要想生效@RequestMapping注解
    必须在上下文中注册DefaultAnnotationHandlerMapping(处理器映射器)和AnnotationMethodHandlerAdapter(处理器适配器)
    这两个实例分别在类级别和方法级别处理，而annotation-driven的配置可以自动完成以上两个实例的注入-->
    <mvc:annotation-driven/>

    <!--视图解析器-->
    <bean id="internalResourceViewResolver"
          class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <!--前缀-->
        <property name="prefix" value="/WEB-INF/jsp/"/>
        <!--后缀-->
        <property name="suffix" value=".jsp"/>
    </bean>
</beans>